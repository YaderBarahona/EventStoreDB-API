{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",
  // configuración para la conexión a EventStoreDB
  "EventStoreConnection": {
    //indicamos que la aplicación debe conectarse a un servidor de EventStoreDB que se ejecuta en localhost en el puerto 2113 y que no utiliza el protocolo TLS.
    "ConnectionString": "esdb://localhost:2113"
  }
}
